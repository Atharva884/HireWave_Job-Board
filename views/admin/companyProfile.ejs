                                            </tr>
                                            <tr>
                                                <td>
                                                    <h6 class="mb-0">Company Address: </h6>

                                                </td>
                                                <td class="text-center">
                                                    <%=company.companyAddress%>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <h6 class="mb-0">Website: </h6>

                                                </td>
                                                <td class="text-center">
                                                    <%=company.website%>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <h6 class="mb-0">Company Email: </h6>

                                                </td>
                                                <td class="text-center">
                                                    <%=company.companyEmail%>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <h6 class="mb-0">Contact No: </h6>

                                                </td>
                                                <td class="text-center">
                                                    <%=company.contactNo%>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <h6 class="mb-0">Socials Links: </h6>

                                                </td>
                                                <td class="text-center">
                                                    <%=company.socialLinks%>
                                                </td>
                                            </tr>
                                            
                                        </tbody>
                                    </table>

                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">Company Gallery</th>
                                                <th class="text-center" scope="col">Media</th>
